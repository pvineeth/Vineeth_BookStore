@model Vineeth.Models.BookModel

@{
	ViewData["Title"] = "Book Details"+Model.Title;
}

<div class="container">
	<h3 class="display-4">Book Details</h3>
	<div class="row">
		<div class="col-md-6">

			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				</ol>
				<div class="carousel-inner">
					<div class="carousel-item active">

						<img src="~/images/download (1).jpg" class="d-block w-100" />
					</div>
					<div class="carousel-item">

						<img src="~/images/download (2).jpg" class="d-block w-100" />
					</div>
					<div class="carousel-item">
						<img src="~/images/download.jpg" class="d-block w-100" />

					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>

		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12">
					<h1>@Model.Title</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-primary">
					<label>By::@Model.Author</label>
					
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<p>
						@Model.Description
					</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<a class="btn btn-primary" href="@Model.Bookpdfurl">
						Read Now
					</a>
				</div>
			</div>
			<hr />
			<ul class="list-group">
				<li class="list-group-item"><span class="font-monospace">category -</span>@Model.Category</li>
				<li class="list-group-item"><span class="font-monospace">Total Page -</span>@Model.Totalpages</li>
				<li class="list-group-item"><span class="font-monospace">Language -</span>@Model.LanguageID</li>
			</ul>

		</div>
	</div>
	<hr />
	<div class="py-5 bg-light" id="similarbooks">
		<h3 class="h3">
			Similar books
		</h3>
		<div class="row">
			@for (int i = 0; i <= 5; i++)
			{
				<div class="col-md-4">
					<div class="card-md-4 shadow-sm" style="background-color:white">
						<svg class="bd-placeholder-img card-img-top " width="100%" height="255" style="background-color:black"></svg>
						<div class="card-body">
							<h3>Title of the book</h3>
							<p class="card-text">book List </p>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group " style="padding-left:20px;padding-bottom:20px">
									<a href="#" class="btn btn-sm btn-outline-secondary ">View details</a>
								</div>
								<small class="text-muted" style="padding-right:20px">Author</small>
							</div>
						</div>
					</div>
				</div>

			}
		</div>
	</div>
</div>