@model IEnumerable<BookModel>
@{
	Layout = "_Layout";
}
<div class="container">
	<h1>All the Books</h1>
	<div class="row">
		@foreach (var book in Model)
		{
			<div class="col-md-4">
				<div class="card-md-4 shadow-sm" style="background-color:white">
					<img src="@book.coverimageurl" class="img-thumbnail"/>
					<div class="card-body">
						<h3>@book.Title</h3>
						<p class="card-text">@book.Description </p>
						<div class="d-flex justify-content-between align-items-center">
							<div class="btn-group " style="padding-left:20px;padding-bottom:20px">

								<a asp-controller="Book" asp-action="Getbtid" asp-route-id="@book.ID"
							    class="btn btn-sm btn-outline-secondary ">View details</a>
							</div>
							<small class="text-muted" style="padding-right:20px">@book.Author</small>
						</div>
					</div>
				</div>
			</div>

		}
	</div>
</div>